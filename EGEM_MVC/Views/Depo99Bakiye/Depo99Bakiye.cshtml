<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="/lib/bootstrap.min.css">
<script src="/lib/jquery-1.12.2.min.js"></script>
<script src="/lib/bootstrap.min.js"></script>
<p></p>


<table id="hamlist" class="table table-striped table-bordered table-hover " width="100" cellspacing="0">
    <tr class="table-secondary">
        <th scope="row">STOK KODU</th>
        <th scope="row">STOK ADI</th>
        <th scope="row">STOK BAKIYE</th>
        <th scope="row">SERI NO</th>
        <th scope="row">SERI BAKIYE</th>
        <th scope="row">DOF NO</th>
        <th scope="row">KAYIT YAPAN</th>
        <th scope="row">DOF TARIH</th>
        <th scope="row">UYGUNSUZLUK TANIMI</th>
        <th scope="row">KREDI_NOTU</th>
    </tr>
    <tbody>
        @foreach (var DEPO99 in Model)
        {
        <tr>

            <th>@DEPO99.STOK_KODU</th>
            <td>@DEPO99.STOK_ADI</td>
            <td>@DEPO99.STOK_BAKIYE</td>
            <th>@DEPO99.SERI_NO</th>
            <td>@DEPO99.SERI_BAKIYE</td>
            <td>@DEPO99.DOF_NO</td>
            <th>@DEPO99.KAYIT_YAPAN</th>
            <td>@DEPO99.DOF_TARIH</td>
            <td>@DEPO99.UYGUNSUZLUK_TANIMI</td>
            <th>@DEPO99.KREDI_NOTU</th>
        </tr>
        }
    </tbody>
</table>

