@using PagedList.Mvc;
@using PagedList;
@using EGEM_MVC.Models.Entity;
@model  PagedList.IPagedList<EGEM_DEPO99BAKIYE>
@{
    ViewBag.Title = "Depo99Bakiye";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

