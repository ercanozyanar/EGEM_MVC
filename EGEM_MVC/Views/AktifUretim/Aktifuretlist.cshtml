@using PagedList.Mvc;
@using PagedList;
@using EGEM_MVC.Models.Entity;
@model  PagedList.IPagedList<EGEM_AKTIFURETIM>
@{
    ViewBag.Title = "Aktifuretlist";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

&nbsp;

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="/lib/bootstrap.min.css">
<script src="/lib/jquery-1.12.2.min.js"></script>
<script src="/lib/bootstrap.min.js"></script>
<p></p>


<table id="hamlist" class="table table-striped table-bordered table-hover " width="100" cellspacing="0">
    <tr class="table-secondary">
        <th scope="row">ORJINAL IMAJ</th>
        <th scope="row">SIPARIS NO</th>
        <th scope="row">MAKINA</th>
        <th scope="row">STOK KODU</th>
        <th scope="row">STOK ADI</th>
        <th scope="row">CARI ISIM</th>
        <th scope="row">PLANLANAN MIKTAR</th>
        <th scope="row">URETIM MIKTARI</th>
    </tr>
    <tbody>
        @foreach (var aktif in Model)
        {
            <tr>

                <th><a href="/AktifUretim/Aktifdetay/@aktif.ID" class="btn bg-info">Detay</a></th>
                <th>@aktif.SIPARIS_NO</th>
                <td>@aktif.MAKINA</td>
                <td>@aktif.STOK_KODU</td>
                <th>@aktif.STOK_ADI</th>
                <td>@aktif.CARI_ADI</td>
                <td>@aktif.PLANLANAN_MIKTAR</td>
                <th>@aktif.URETIM_MIKTARI</th>
            </tr>
        }
    </tbody>
</table>

 Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, Page_No =>Url.Action("Aktifuretlist",
    new { Page_No, Sorting_Order= ViewBag.CurrentSortOrder, Filter_Value = ViewBag.FilterValue }))




