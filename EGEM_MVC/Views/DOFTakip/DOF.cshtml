@using PagedList.Mvc;
@using PagedList;
@using EGEM_MVC.Models.EntityEgem;
@model  PagedList.IPagedList<EGEM_DOFLIST>
@{
    ViewBag.Title = "DOF";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

&nbsp;

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="/lib/bootstrap.min.css">
<script src="/lib/jquery-1.12.2.min.js"></script>
<script src="/lib/bootstrap.min.js"></script>
<p></p>
&nbsp;&nbsp;
<div>
    @using (Html.BeginForm("DOF", "DOFTakip", FormMethod.Get))
    {
        <p>
            DOF NO: @Html.TextBox("Search_Data", ViewBag.FilterValue as string)
            <input type="submit" value="Bul" />
        </p>
    }
</div>
    &nbsp;&nbsp;

<table id="hamlist" class="table table-striped table-bordered table-hover " width="100" cellspacing="0">
    <tr class="table-secondary">
        <th>Detay</th>
        <th scope="row">DOF NO</th>
        <th scope="row">TARIH</th>
        <th scope="row">KAYIT YAPAN</th>
        <th scope="row">UYGUNSUZLUK FAALIYETI</th>
        <th scope="row">UYGUNSUZLUK SURECI</th>
        <th scope="row">UYGUNSUZLUK TANIMI</th>


    </tr>
    <tbody>
        @foreach (var doflist in Model)
        {
            <tr>
                <th><a href="/DOFTakip/DOFdetay/@doflist.ID" class="btn bg-info">Detay</a></th>
                <td>@doflist.ID</td>
                <td>@doflist.TARIH</td>
                <td>@doflist.KAYIT_YAPAN</td>
                <td>@doflist.UYGUNSUZLUK_FAALIYET</td>
                <td>@doflist.UYGUNSUZLUK_SUREC</td>
                <td>@doflist.UYGUNSUZLUK_TANIMI</td>




            </tr>
        }
    </tbody>
</table>
 Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, Page_No =>Url.Action("DOF",
    new { Page_No, Sorting_Order= ViewBag.CurrentSortOrder, Filter_Value = ViewBag.FilterValue }))






